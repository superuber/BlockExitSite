{
  "name": "Block Exit Site",
  "description": "Remove all links, mouseOvers, mouseClicks, rightClicks from all websites",
  "version": "1.0",
  "permissions": [
    "tabs", "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery-2.1.3.min.js", "script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "manifest_version": 2
}
